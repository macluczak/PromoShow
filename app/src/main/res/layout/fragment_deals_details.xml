<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.deals.details.DealsDetailsActivity">

    <ImageView
        android:id="@+id/deal_image"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/favourite_button"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/category_frame"
        android:backgroundTint="@color/purple_500"
        android:src="@drawable/baseline_favorite_border_24"
        app:layout_constraintBottom_toBottomOf="@id/deal_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deal_image"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/deal_name"
        style="@style/PromoLabel.Black.LatoBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_standard"
        android:layout_marginEnd="@dimen/padding_standard"
        android:text="Spodnie zrustykalnym"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size_xxlarge"
        app:layout_constraintBottom_toBottomOf="@id/favourite_button"
        app:layout_constraintEnd_toStartOf="@id/favourite_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favourite_button" />

    <TextView
        android:id="@+id/deal_outlet"
        style="@style/PromoLabel.Black.Lato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_standard"
        android:layout_marginTop="@dimen/padding_xxsmall"
        android:text="Media Market"
        android:textSize="@dimen/text_size_xxlarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deal_name" />

    <TextView
        android:id="@+id/deal_price"
        style="@style/PromoLabel.Black.Lato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_standard"
        android:layout_marginTop="@dimen/padding_small"
        android:text="89,90 PLN"
        android:textSize="@dimen/text_size_xxxlarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deal_outlet" />


    <TextView
        android:id="@+id/deal_regular_price"
        style="@style/PromoLabel.OrangeyRed.LatoBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_standard"
        android:text="129,90 PLN"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintBottom_toBottomOf="@id/deal_price"
        app:layout_constraintStart_toEndOf="@id/deal_price"

        tools:visibility="visible" />

    <TextView
        android:id="@+id/deal_description"
        style="@style/PromoLabel.Black.Lato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_standard"
        android:layout_marginTop="@dimen/padding_medium"
        android:text="Phasellus sodales sollicitudin quam sitam et porttitor. Aenean sagittis elit et tempus pulvinar. Vivamus luctus quis augu"

        android:textSize="@dimen/text_size_medium"
        app:layout_constraintTop_toBottomOf="@id/deal_regular_price" />

    <TextView
        android:id="@+id/deal_label_id"
        style="@style/PromoLabel.SlateGrey.Lato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_standard"
        android:layout_marginTop="@dimen/padding_medium"
        android:text="id:"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/deal_id"
        style="@style/PromoLabel.SlateGrey.Lato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_standard"
        android:layout_marginTop="@dimen/padding_medium"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/deal_label_id"
        tools:text="0" />

</androidx.constraintlayout.widget.ConstraintLayout>