<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/image_24" />

            <TextView
                android:id="@+id/makerNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Product Name"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:textColor="@color/primary_variant"
                style="@style/PromoLabel.Black.LatoLight"
                />

            <TextView
                android:id="@+id/productNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Product Name"
                style="@style/PromoLabel.Black.Lato"
                android:textColor="@color/tertiary_variant"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/promoPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/PromoLabel.OrangeyRed.Lato"
                    tools:text="$9.99"
                    android:maxLines="1"
                    android:textSize="18dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/regularPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/PromoLabel.Black.LatoLight"
                    tools:text="$19.99"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:paddingBottom="4dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>