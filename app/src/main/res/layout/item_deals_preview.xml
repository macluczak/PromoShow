<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="6dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:paddingVertical="30dp"
            android:src="@drawable/image_24"
            android:foreground="@drawable/shadow"
            />

        <LinearLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="top"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/promoPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    style="@style/PromoLabel.OrangeyRed.Lato"
                    tools:text="$9.99"
                    android:maxLines="1"
                    android:textSize="18dp"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/regularPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    style="@style/PromoLabel.Black.LatoLight"
                    tools:text="$19.99"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:padding="4dp" />

            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/makerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="maker"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center|top"
        android:textColor="@color/white"
        style="@style/PromoLabel.Black.LatoLight"
        android:paddingHorizontal="8dp" />

    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Product Name"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="left|bottom"
        style="@style/PromoLabel.Black.Lato.Medium"
        android:textColor="@color/white"
        android:paddingHorizontal="8dp"
        android:paddingBottom="10dp"/>



</LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>